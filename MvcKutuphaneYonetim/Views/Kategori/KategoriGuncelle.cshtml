
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@model MvcKutuphaneYonetim.Models.Entity.TableKategori


<h2>KategoriGüncelle</h2>

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{ 
    <div style="margin-bottom:15px"></div>

    <div class="form-group">

        @Html.LabelFor(k=>k.ID)
        @Html.TextBoxFor(k=>k.ID , new { @class = "form-control" })

        <br/>

        @Html.LabelFor(k=>k.AD)
        @Html.TextBoxFor(k=>k.AD , new { @class = "form-control" })

    </div>

    <div>
        <button class="btn btn-warning"> Güncelle</button>
    </div>
}