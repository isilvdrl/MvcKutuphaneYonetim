
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using MvcKutuphaneYonetim.Models.Entity;
@model List<TableKategori>


<h2> Kategori</h2>

<table class="table table-bordered">
    <tr>
        <th> KATEGORİ ID </th>
        <th> KATEGORİ AD </th>
        <th> SİL </th>
        <th> GÜNCELLE </th>
    </tr>

    @foreach (var ktg in Model) { 
    <tr>
        <td> @ktg.ID</td>
        <td> @ktg.AD </td>
        <td><a href="/Kategori/KategoriSil/@ktg.ID" class=" btn btn-danger">Sil</a></td>
        <td><a href="/Kategori/KategoriGuncelle/@ktg.ID" class=" btn btn-success">Güncelle</a></td>
        
    </tr>
    }

</table>

<a href ="/Kategori/KategoriEkle/" class= "btn btn-primary"> Yeni Kategori Ekle</a>