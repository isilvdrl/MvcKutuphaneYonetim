
@{
    ViewBag.Title = "YazarGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@model MvcKutuphaneYonetim.Models.Entity.TableYazar

<h2>YazarGuncelle</h2>

@using (Html.BeginForm("YazarKayitGuncelle", "Yazar", FormMethod.Post))
{  
    <div style="margin-bottom:15px"></div>
    
    <div class="form-group">
        
        <div style="margin-bottom:15px">
            <label>Yazar ID </label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        
        <div style="margin-bottom:15px">
            <label>Yazar AD</label>
            @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        </div>
        
        <div style="margin-bottom:15px">
            <label>Yazar SOYAD</label>
            @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        </div>
        
        <div style="margin-bottom:15px">
            <label>Yazar DETAY</label>
            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
        </div>
        
        <button class="btn btn-warning">Bilgileri Güncelle</button>

    </div>

}